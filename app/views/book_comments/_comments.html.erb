<% book.book_comments.each do |book_comment| %>
  <table class="table table-borderless">
    <tr class="d-flex align-items-center">
      <td>
        <%= link_to book_comment.user do %>
          <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <td>
          <% if book_comment.user == current_user %>
            <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment),
            method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
          <% end %>
        </td>
      <% end %>
    </tr>
  </table>